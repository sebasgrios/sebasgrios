---
import '@fontsource-variable/libre-franklin';
import './styles.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="Sebastián González Ríos" />
		<meta name="description" content="Portfolio de Sebastián González Ríos" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-light dark:bg-dark">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Libre Franklin Variable', system-ui, sans-serif;
	}
</style>